extends layout

block content
    div(ng-controller="fileController as files")
        .row
            .col-md-8
                .input-group
                    span.input-group-addon #{basePath}/
                    input.form-control(ng-model="files.inputPath" ng-enter="files.openPath()")
                    span.input-group-btn
                        button.btn.btn-info(ng-click="files.openPath()")
                            i.glyphicon-folder-open.glyphicon
                            |&nbsp; Open
            .col-md-4
                .input-group
                    span.input-group-addon
                        i.glyphicon.glyphicon-search
                    input.form-control(ng-model="files.search")
        ol.breadcrumb
            li #{basePath}
            li(ng-repeat="directory in files.inputPath.split('/') track by $index") {{directory}}
        .container-fluid
            .row.files
                .col-md-2.col-lg-1.col-sm-3.file.text-center(ng-repeat="file in files.list | filter: files.search")
                    i.glyphicon.folder-icon(class = '{{file.isDir ? "glyphicon-folder-close directory" : "glyphicon-file not-directory";}}')
                    | {{file.name}}
